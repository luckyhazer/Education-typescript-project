{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "ESNext",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "../../dist/shared",
    "lib": ["ES2020"],
    "composite": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["./**/*.test.ts"],
}
